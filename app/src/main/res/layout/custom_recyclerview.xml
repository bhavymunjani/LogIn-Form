<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="1dp"
    >
    <TextView
        android:id="@+id/custom_recyclerview_name"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        style="@style/text_morris_20"
        android:background="@color/light_gray"
        android:padding="3dp"
        android:textStyle="bold"
        >
    </TextView>
    <TextView
        android:id="@+id/custom_recyclerview_Email"
        android:layout_width="200dp"
        android:layout_marginHorizontal="2dp"
        android:layout_height="match_parent"
        style="@style/text_morris_20"
        android:background="@color/light_gray"
        android:padding="3dp"
        android:textStyle="bold"
        >
    </TextView>
    <TextView
        android:id="@+id/custom_recyclerview_contact"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        style="@style/text_morris_20"
        android:background="@color/light_gray"
        android:padding="3dp"
        android:textStyle="bold"
        >
    </TextView>
   <LinearLayout
       android:layout_marginLeft="2dp"
       android:gravity="center"
       android:background="@color/light_gray"
       android:layout_width="100dp"
       android:layout_height="match_parent">
       <ImageView
           android:src="@drawable/delete"
           android:id="@+id/recyclerview_delete"
           android:layout_width="20dp"
           android:layout_height="20dp">

       </ImageView>
       <ImageView
           android:layout_marginHorizontal="20dp"
           android:src="@drawable/edit"
           android:id="@+id/recyclerview_edit"
           android:layout_width="20dp"
           android:layout_height="20dp">

       </ImageView>

   </LinearLayout>
</LinearLayout>

