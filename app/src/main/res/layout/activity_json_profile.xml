<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Json_Form_Activity"
    android:background="@drawable/background2">
    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/json_profile_image"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            android:src="@drawable/edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </de.hdodenhof.circleimageview.CircleImageView>
        <ImageView
            android:id="@+id/json_profile_camara"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_menu_camera"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageView>

    </FrameLayout>
    <EditText
        android:id="@+id/json_profile_name"
        style="@style/edit_morris_18"
        android:hint="Name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:editable="false"
        android:id="@+id/json_profile_email"
        style="@style/edit_morris_18"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress">
    </EditText>
    <EditText
        android:editable="false"
        android:id="@+id/json_profile_password"
        style="@style/edit_morris_18"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="10">
    </EditText>
    <EditText
        android:editable="false"
        android:id="@+id/json_profile_contact"
        style="@style/edit_morris_18"
        android:hint="contact"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="10">
    </EditText>
    <EditText
        android:drawableRight="@drawable/calender1"
        android:id="@+id/json_profile_dob"
        style="@style/edit_morris_18"
        android:hint="Date Of Birth"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false">
    </EditText>
    <RadioGroup
        android:id="@+id/json_profile_gender"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:enabled="false"
            android:id="@+id/json_profile_male"
            android:layout_weight="1"
            style="@style/radiobutton_morris_18"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:text="male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>
        <RadioButton
            android:enabled="false"
            android:id="@+id/json_profile_female"
            android:layout_weight="1"
            style="@style/radiobutton_morris_18"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:text="female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>
        <RadioButton
            android:enabled="false"
            android:id="@+id/json_profile_transgender"
            android:layout_weight="1"
            style="@style/radiobutton_morris_18"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:text="transgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>
    </RadioGroup>
    <Spinner
        android:enabled="false"
        android:background="@color/light_gray"
        android:id="@+id/json_profile_city"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>
    <Button
        android:id="@+id/json_profile_editprofile"
        android:text="Edit"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@style/button_morris_20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        >

    </Button>
    <Button
        android:id="@+id/json_profile_submit"
        android:text="submit"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@style/button_morris_20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        >

    </Button>
    <Button
        android:id="@+id/json_profile_logout"
        android:text="Logout"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@style/button_morris_20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        >

    </Button>
</LinearLayout>