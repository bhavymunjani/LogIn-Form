<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addlist_send"
            style="@style/button_morris_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Send">

        </Button>

        <EditText
            android:id="@+id/addlist_edittext"
            style="@style/edit_morris_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/addlist_send"
            android:hint="Name">

        </EditText>

    </RelativeLayout>

        <ListView
            android:id="@+id/addlist_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

</LinearLayout>